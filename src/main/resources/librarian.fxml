<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <HBox prefHeight="299.0" prefWidth="1000.0" spacing="50.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="userProfileButton" contentDisplay="TOP" mnemonicParsing="false" onAction="#userProfile" onMouseEntered="#userProfile" prefHeight="202.0" prefWidth="270.0" text="User">
               <graphic>
                  <ImageView fitHeight="151.0" fitWidth="152.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@logouser.png" />
                     </image>
                  </ImageView>
               </graphic>
               <font>
                  <Font name="Garamond" size="24.0" />
               </font>
            </Button>
            <Button fx:id="manageUsersButton" contentDisplay="TOP" mnemonicParsing="false" onAction="#manageUser" prefHeight="202.0" prefWidth="150.0" text="Manage Users">
               <font>
                  <Font name="Garamond" size="24.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="150.0" fitWidth="150.0" pickOnBounds="true">
                     <image>
                        <Image url="@usersmangaement.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="searchButton2" contentDisplay="TOP" mnemonicParsing="false" onAction="#searchBook" prefHeight="200.0" prefWidth="254.0" text="Search">
               <graphic>
                  <ImageView fitHeight="150.0" fitWidth="142.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@loupe.png" />
                     </image>
                  </ImageView>
               </graphic>
               <font>
                  <Font name="Garamond" size="24.0" />
               </font>
            </Button>
            <Button fx:id="borrowingLibButton" contentDisplay="TOP" mnemonicParsing="false" onAction="#getBorrowInf" prefHeight="89.0" prefWidth="196.0" text="Borrowing">
               <graphic>
                  <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@book.png" />
                     </image>
                  </ImageView>
               </graphic>
               <font>
                  <Font name="Garamond" size="24.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets left="50.0" right="50.0" top="125.0" />
         </padding>
      </HBox>
   </center>
   <bottom>
      <Button fx:id="disconnectButton" contentDisplay="TOP" mnemonicParsing="false" onAction="#disconnect" prefHeight="146.0" prefWidth="173.0" text="Disconnect" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="15.0" right="800.0" />
         </BorderPane.margin>
         <font>
            <Font name="Garamond" size="24.0" />
         </font>
         <graphic>
            <ImageView fitHeight="96.0" fitWidth="138.0" onMouseEntered="#disconnect" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@off.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
   </bottom>
   <top>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label prefHeight="78.0" prefWidth="49.0" text="Id :">
               <font>
                  <Font name="Garamond" size="24.0" />
               </font>
            </Label>
            <Label fx:id="userID" prefHeight="78.0" prefWidth="154.0">
               <font>
                  <Font name="Garamond" size="24.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets left="10.0" top="5.0" />
         </padding>
      </HBox>
   </top>
</BorderPane>
